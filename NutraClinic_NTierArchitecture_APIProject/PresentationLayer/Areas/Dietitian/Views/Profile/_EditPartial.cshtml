@model PresentationLayer.Areas.Dietitian.ViewModels.DietitianEditVM

<form id="dietitian-edit-form" method="post" asp-area="Dietitian" asp-controller="Profile" asp-action="Edit">


	<input type="hidden" asp-for="DietitianId" />

	<div class="row g-3">
		<div class="col-md-6">
			<label asp-for="FullName" class="form-label">Full Name</label>
			<input asp-for="FullName" class="form-control" placeholder="Enter full name" />
		</div>

		<div class="col-md-6">
			<label asp-for="Email" class="form-label">Email</label>
			<input asp-for="Email" class="form-control" placeholder="Enter email" />
		</div>

		<div class="col-md-6">
			<label asp-for="Biography" class="form-label">Biography</label>
			<textarea asp-for="Biography" class="form-control" placeholder="Write a short bio"></textarea>
		</div>

		<div class="col-md-6">
			<label asp-for="WorkingDays" class="form-label">Working Days</label>
			<input asp-for="WorkingDays" class="form-control" placeholder="e.g. Mon-Fri" />
		</div>

		<div class="col-md-6">
			<label asp-for="WorkingHours" class="form-label">Working Hours</label>
			<input asp-for="WorkingHours" class="form-control" placeholder="e.g. 09:00-17:00" />
		</div>

		<div class="col-md-6">
			<label asp-for="Password" class="form-label">Password (leave blank if unchanged)</label>
			<input asp-for="Password" type="password" class="form-control" placeholder="Enter new password" />
		</div>

	</div>

	<div class="d-flex justify-content-end gap-3 mt-4">
		<button type="button" id="edit-cancel-btn" class="btn dt-btn-outline">Cancel</button>
		<button type="submit" class="btn dt-btn-filled">Save</button>
	</div>
</form>


@section Scripts {

	<partial name="_ValidationScriptsPartial" />
}




